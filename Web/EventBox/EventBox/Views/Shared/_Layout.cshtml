<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <!--Check logged in-->

    <title>Home</title>
    <link rel='stylesheet prefetch' href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css'>

    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="http://localhost/EventBox/">EVENT BOX</a>
            </div>
            <div style="margin-left: 2em" class="nav navbar-nav">
                <div class="search">
                    <form method="GET" action="SearchEvent">
                        <input type="text" class="form-control input-sm" maxlength="64" placeholder="Search" name="searchValue" />
                        <button type="submit" class="btn btn-primary btn-sm" id="btn_Search">Search</button>
                    </form>
                </div>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li>

                    <button type="button" class="btn btn-info btn-sm glyphicon glyphicon-user" id="btn_Reg" name="btn_Reg" data-toggle="modal" data-target="#myModal"> Đăng ký</button>
                </li>
                <li>
                    <button type="button" class="btn btn-info btn-sm glyphicon glyphicon-log-in" id="btn_Login" name="btn_Login" data-toggle="modal" data-target="#ModalDangNhap"> Đăng nhập</button>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Carousel -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators"></ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Images/1.jpg" alt="Chania" width="500" height="250" />
            </div>
            <div class="item">
                <img src="~/Images/2.jpg" alt="Chania" width="500" height="250" />
            </div>
            <div class="item">
                <img src="~/Images/3.jpg" alt="Chania" width="500" height="250" />
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Modal DangKy -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->


            <div class="login-card">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h1>Đăng ký</h1><br>
                <form method="post" action="Users/Register">
                    <input type="text" id="rEmail" name="email" placeholder="Email">
                    <input type="password" id="rPassword" name="password" placeholder="Mật khẩu">
                    <input type="password" id="rConfirmPassword" name="confirmpassword" placeholder="Nhập lại mật khẩu">
                    <input type="submit" id="register" class="login login-submit" value="Đăng ký">
                </form>
            </div>
        </div>
    </div>
    <!-- Modal DangKy -->
    <!-- Modal DangNhap-->
    <div id="ModalDangNhap" class="modal fade" role="dialog">
        <div class="modal-dialog">


            <div class="login-card">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h1>Đăng nhập</h1><br>
                <form method="post" action="Users/Login">
                    <input type="text" id="loginEmail" name="email" placeholder="Email" ">
                    <input type="password" id="loginPassword" name="password" placeholder="Mật khẩu">
                    <input type="submit" class="login login-submit" value="Đăng Nhập">

                </form>
            </div>

        </div>
    </div>
    <!-- Modal DangNhap-->
    <!-- <div id="error"><img src="https://dl.dropboxusercontent.com/u/23299152/Delete-icon.png" /> Your caps-lock is on.</div> -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js'></script>
    @RenderBody()
</body>
</html>
