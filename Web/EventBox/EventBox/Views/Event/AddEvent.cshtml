@using EventBox.Models;

@{
    ViewBag.Title = "Thêm sự kiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var EventDetail = (EventDetail)ViewData["EventDetail"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="generator"
          content="HTML Tidy for HTML5 (experimental) for Windows https://github.com/w3c/tidy-html5/tree/c63cc39" />
    <meta charset="UTF-8" />
    <script src=@Url.Content("~/Scripts/modernizr.js") type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/normalize.css") />
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/styles.css") />
    <title>Event Details</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="text" name="name" placeholder="Tên sự kiện" required><br />
        <input type="text" name="info" placeholder="Thông tin" required><br />
        <input type="datetime-local" name="time" placeholder="Thời gian" required><br />
        <input type="text" name="place" placeholder="Địa điểm" required><br />
        <input type="number" name="maxAttendance" placeholder="Số người tối đa" ><br />
        <input type="number" name="requireAttendance" placeholder="Số người yêu cầu" ><br />
        <input type="number" name="price" placeholder="Giá" ><br />
        <input type="file" id="file" name="image" accept="image/*" required><br />
        <button type="submit" id="upload" onclick="submitform()">Thêm sự kiện</button><br />
    }
</body>
</html>
