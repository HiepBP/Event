@using EventBox.Models;

@{
    ViewBag.Title = "Thêm sự kiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var EventDetail = (EventDetail)ViewData["EventDetail"];
    var Categories = (List<Category>)ViewData["Categories"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="generator"
          content="HTML Tidy for HTML5 (experimental) for Windows https://github.com/w3c/tidy-html5/tree/c63cc39" />
    <meta charset="UTF-8" />
    <script src=@Url.Content("~/Scripts/modernizr.js") type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/normalize.css") />
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/styles.css") />
</head>
<body>
    @using (Html.BeginForm("Create", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <table class="table table-add-event">


            <tr>
                <td><input type="text" name="name" placeholder="Tên sự kiện" required></td>
            </tr>
            <tr>
                <td><input type="text" name="info" placeholder="Thông tin" required><br /></td>
            </tr>
            <tr>
                <td><input type="datetime-local" name="time" placeholder="Thời gian" required></td>
            </tr>
            <tr>
                <td><input type="text" name="place" placeholder="Địa điểm" required></td>
            </tr>
            <tr>
                <td><input type="number" name="maxAttendance" placeholder="Số người tối đa"></td>
            </tr>
            <tr>
                <td><input type="number" name="requireAttendance" placeholder="Số người yêu cầu"></td>
            </tr>
            <tr>
                <td><input type="number" name="price" placeholder="Giá"></td>
            </tr>
            <tr>
                <td><input type="file" id="file" name="image" accept="image/*" required></td>
            </tr>

            <tr>
                @foreach (var Category in Categories)
                {
                    <td><input name="categories" value="@Category.ID" type="checkbox" />@Category.Name</td>
                }
            </tr>
            <tr>
                <td><button type="submit" id="upload" onclick="submitform()">Thêm sự kiện</button><br /></td>
            </tr>


        </table>

    }
</body>
</html>
