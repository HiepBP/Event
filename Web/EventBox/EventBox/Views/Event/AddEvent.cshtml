@using EventBox.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var EventDetail = (EventDetail)ViewData["EventDetail"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="generator"
          content="HTML Tidy for HTML5 (experimental) for Windows https://github.com/w3c/tidy-html5/tree/c63cc39" />
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src=@Url.Content("~/Scripts/modernizr.js") type="text/javascript"></script>
    <script type="text/javascript">
        function submitform() {
            var postdata = $('#add-form').serialize();
            var file = document.getElementById('file').files[0];
            var name = document.getElementById('name').value;
            var info = document.getElementById('info').value;
            var fd = new FormData();
            fd.append("file", file);
            fd.append("name", name);
            fd.append("info", info);
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Create", false);
            xhr.send(fd);

        }
    </script>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/normalize.css") />
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/styles.css") />
    <title>Event Details</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="text" name="name" placeholder="Tên sự kiện" required><br />
        <input type="text" name="info" placeholder="Thông tin" required><br />
        <input type="datetime-local" name="time" placeholder="Thời gian" required><br />
        <input type="text" name="place" placeholder="Địa điểm" required><br />
        <input type="number" name="maxAttendance" placeholder="Số người tối đa" required><br />
        <input type="number" name="requireAttendance" placeholder="Số người yêu cầu" required><br />
        <input type="number" name="price" placeholder="Giá" required><br />
        <input type="file" id="file" name="image" accept="image/*" required><br />
        <button type="submit" id="upload" onclick="submitform()">Thêm sự kiện</button><br />
    }
</body>
</html>
