@using EventBox.Models;

@{
    ViewBag.Title = "Cập nhật sự kiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var EventDetail = (EventDetail)ViewData["UpdateEvent"];
}

<html>
<head>
    <meta name="generator"
          content="HTML Tidy for HTML5 (experimental) for Windows https://github.com/w3c/tidy-html5/tree/c63cc39" />
    <meta charset="UTF-8" />
    <script src=@Url.Content("~/Scripts/modernizr.js") type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/normalize.css") />
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/styles.css") />
</head>
<body>
    @using (Html.BeginForm("Update", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="text" name="name" placeholder="Tên sự kiện" value="@EventDetail.Name" required><br />
        <input type="text" name="info" placeholder="Thông tin" value="@EventDetail.Info" required><br />
        <input type="datetime-local" name="time" placeholder="Thời gian" value="@EventDetail.Time.ToString("yyyy-MM-ddThh:mm:ss")" step="1"  required><br />
        <input type="text" name="place" placeholder="Địa điểm" value="@EventDetail.Place" required><br />
        <input type="number" name="maxAttendance" placeholder="Số người tối đa" value="@EventDetail.MaxAttendance"><br />
        <input type="number" name="requireAttendance" placeholder="Số người yêu cầu" value="@EventDetail.RequireAttendance"><br />
        <input type="number" name="price" placeholder="Giá" value="@EventDetail.Price"><br />
        <input type="file" id="file" name="image" accept="image/*"><br />
        <input type="hidden" name="id" value="@EventDetail.ID" /><br />
        <input type="hidden" name="oldValueImage" value="@EventDetail.Image" /><br/>
        <button type="submit" id="upload">Cập nhật sự kiện</button><br />
    }
</body>
</html>
