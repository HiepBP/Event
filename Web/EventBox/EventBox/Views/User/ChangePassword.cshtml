@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="generator"
          content="HTML Tidy for HTML5 (experimental) for Windows https://github.com/w3c/tidy-html5/tree/c63cc39" />
    <meta charset="UTF-8" />
    <script src=@Url.Content("~/Scripts/modernizr.js") type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/normalize.css") />
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/styles.css") />
</head>
<body>
    <input type="password" id="OldPassword" placeholder="Mật khẩu cũ" required><br />
    <input type="password" id="NewPassword" placeholder="Mật khẩu mới" required><br />
    <input type="password" id="ConfirmPassword" placeholder="Nhập lại mật khẩu mới" required><br />
    <input type="hidden" id="userID" value="" required><br />
    <h5 id="ErrorChangePassword"></h5>
    <button type="submit" id="upload">Đổi mật khẩu</button><br />
    <script>
        $('#upload').click(function (e) {
            e.preventDefault();
            var source = {
                'OldPassword': $('#OldPassword').val(),
                'NewPassword': $('#NewPassword').val(),
                'ConfirmPassword': $('#ConfirmPassword').val()
            }
            $.ajax({
                type: "POST",
                url: "http://localhost/YTicket.API2/api/Account/ChangePassword",
                data: source,
                beforeSend: function (xhr) {
                    xhr.setRequestHeader ("Authorization", "Bearer @Session["Token"]");
                },
                success: function (data) {
                    var url = "http://localhost/EventBox/Users/Detail?id="+@Session["CurrentUserID"];
                    window.location = url;
                },
                error: function (error) {
                    document.getElementById("ErrorChangePassword").innerHTML = "Lỗi xảy ra khi đổi mật khẩu";
                }
            });
        });
    </script>
</body>
</html>