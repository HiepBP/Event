@using EventBox.Models;

@{
    ViewBag.Title = "Cập nhật thông tin người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var UserDetail = (UserDetail)ViewData["UpdateUser"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="generator"
          content="HTML Tidy for HTML5 (experimental) for Windows https://github.com/w3c/tidy-html5/tree/c63cc39" />
    <meta charset="UTF-8" />
    <script src=@Url.Content("~/Scripts/modernizr.js") type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/normalize.css") />
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/styles.css") />
</head>
<body>
    @using (Html.BeginForm("Update", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        

        <table class="table table-add-event">


            <tr>
                <td><input type="text" name="username" placeholder="Tên người dùng" value="@UserDetail.Username" required><br /></td>
            </tr>
            <tr>
                <td><input type="text" name="email" placeholder="Email" value="@UserDetail.Email" readonly><br /></td>
            </tr>
            <tr>
                <td><input type="text" name="address" placeholder="Địa chỉ" value="@UserDetail.Address"><br /></td>
            </tr>
            <tr>
                <td><input type="text" name="phone" placeholder="Số điện thoại" value="@UserDetail.Phone"><br /></td>
            </tr>
            <tr>
                <td><input type="file" id="file" name="image" accept="image/*"><br /></td>
            </tr>

            <tr>
                <td><button type="submit" id="upload">Cập nhật sự kiện</button><br /></td>
            </tr>

        </table>
        <input type="hidden" name="id" value="@UserDetail.ID" />
        <br />
        <input type="hidden" name="oldValueImage" value="@UserDetail.Image" />
        <br />

    }
</body>
</html>
